{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "baseUrl": "./",
        "outDir": "build",
        "removeComments": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "moduleResolution": "node",
        "importHelpers": true,
        "strictPropertyInitialization": false,
        "types": [
            "jest",
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ]
}
